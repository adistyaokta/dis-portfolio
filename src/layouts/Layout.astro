---
import Footer from '../components/Footer.astro';
import { Header } from '../components/Header';
import { Nav } from '../components/Nav';
// import Nav from '../components/Nav.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Adistya Oktaviano Portfolio' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='w-dvw min-h-dvh h-dvh bg-primary flex flex-col justify-between overflow-hidden'
  >
    <!-- <Nav /> -->
    <!-- <Nav client:load /> -->
    <Header client:load />
    <div
      class='size-full flex-1 px-2 md:px-10 flex flex-col gap-10 text-secondary overflow-y-scroll overflow-x-hidden'
    >
      <slot />
    </div>
    <Footer />
  </body>

