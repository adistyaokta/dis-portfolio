---
import Footer from '../components/Footer.astro';
import { Header } from '../components/Header';
import { Nav } from '../components/Nav';
import { SmoothScroll } from '../components/Shared/SmoothScroll';
// import Nav from '../components/Nav.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Adistya Oktaviano Portfolio' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='h-dvh w-dvw min-h-dvh min-w-full flex-1 antialiased'>
    <SmoothScroll client:load>
      <div class='bg-primary overflow-hidden'>
        <Header client:load />
        <div
          class='size-full flex-1 px-2 md:px-10 flex flex-col gap-10 text-secondary font-raleway antialiased overflow-y-scroll overflow-x-hidden'
        >
          <slot />
        </div>
        <Footer />
      </div>
    </SmoothScroll>
  </body>

  <script>
    import { isMobile } from '../stores/app.store';
    // Function to check mobile status
    const checkMobile = () => {
      if (window.innerWidth < 768) {
        isMobile.set(true);
      } else {
        isMobile.set(false);
      }
    };

    // Run on component mount
    window.addEventListener('load', checkMobile);

    // Add resize listener
    window.addEventListener('resize', checkMobile);

    // Cleanup function to remove listeners
    window.addEventListener('unload', () => {
      window.removeEventListener('resize', checkMobile);
    });
  </script>
</html>
