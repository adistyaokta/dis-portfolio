---
import { Icon } from 'astro-icon/components';

type ContactCardProps = {
  name: string;
};

const { name } = Astro.props as ContactCardProps;
---

<div
  class='container flex items-center gap-0 h-20 max-h-20 border-t last:border-b border-secondary/50'
>
  <div class='flex items-center gap-1'>
    <p class='font-bold uppercase text-5xl'>{name}</p>
    <Icon name='mdi:arrow-up' size={25} class={'rotate-45'} />
  </div>
</div>
