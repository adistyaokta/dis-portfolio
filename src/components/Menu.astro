---
import ContactCard from './Cards/ContactCard.astro';
import Nav from './Nav.astro';
---

<div class='h-full bg-primary flex flex-col'>
  <Nav />
  <div class='flex flex-col'>
    <div
      class='text-7xl h-20 max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      home
    </div>
    <div
      class='text-7xl h-20 max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      project
    </div>
    <div
      class='text-7xl h-20 max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      about
    </div>
    <div
      class='text-7xl h-20 max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      contact
    </div>
  </div>
  <div class='flex flex-wrap justify-center items-center mt-auto'>
    <div class='w-1/2 text-center border-t cursor-pointer'>Email</div>
    <div class='w-1/2 text-center border-t cursor-pointer'>Linkedin</div>
    <div class='w-1/2 text-center border-t cursor-pointer'>Github</div>
    <div class='w-1/2 text-center border-t cursor-pointer'>Instagram</div>
  </div>
</div>
