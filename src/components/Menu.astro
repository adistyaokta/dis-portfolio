---
import ContactCard from './Cards/ContactCard.astro';
import Nav from './Nav.astro';
---

<div class='h-full bg-primary flex flex-col'>
  <Nav />
  <div class='flex flex-col'>
    <div
      class='text-7xl md:text-9xl h-20 md:h-full max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      home
    </div>
    <div
      class='text-7xl md:text-9xl h-20 md:h-full max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      project
    </div>
    <div
      class='text-7xl md:text-9xl h-20 md:h-full max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      about
    </div>
    <div
      class='text-7xl md:text-9xl h-20 md:h-full max-w-full w-full flex items-center justify-end uppercase font-extrabold hover:tracking-wider transition-all duration-300 ease-in-out'
    >
      contact
    </div>
  </div>
  <div class='mt-auto flex flex-col gap-2'>
    <div class='text-lg w-full bg-secondary/80 text-primary'>Find me on</div>
    <div class='flex flex-wrap justify-center items-center mt-auto'>
      <div
        class='w-1/2 min-h-10 md:min-h-16 flex items-center text-left md:text-4xl border-t cursor-pointer'
      >
        Email
      </div>
      <div
        class='w-1/2 min-h-10 md:min-h-16 flex items-center text-left md:text-4xl border-t cursor-pointer'
      >
        Linkedin
      </div>
      <div
        class='w-1/2 min-h-10 md:min-h-16 flex items-center text-left md:text-4xl border-t cursor-pointer'
      >
        Github
      </div>
      <div
        class='w-1/2 min-h-10 md:min-h-16 flex items-center text-left md:text-4xl border-t cursor-pointer'
      >
        Instagram
      </div>
    </div>
  </div>
</div>
