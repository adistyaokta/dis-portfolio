{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "include": ["*.js", "*.ts", "*.json", "src/**/*.ts", "src/**/*.tsx"],
    "ignore": ["src/app/asset"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentWidth": 2,
    "lineEnding": "lf",
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "quoteStyle": "single",
      "semicolons": "always",
      "jsxQuoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": { "useKeyWithClickEvents": "off" },
      "recommended": true,
      "correctness": { "useExhaustiveDependencies": "off" },
      "performance": { "noDelete": "off", "noAccumulatingSpread": "off" },
      "style": { "useNumberNamespace": "off", "noNonNullAssertion": "off" },
      "complexity": {
        "noExtraBooleanCast": "off",
        "noForEach": "off",
        "useOptionalChain": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "off",
        "noConfusingVoidType": "off"
      }
    }
  }
}
